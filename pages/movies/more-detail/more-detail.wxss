/* pages/movies/more-detail/more-detail.wxss */
@import "../template/stars/stars-template.wxss";

.container {
  display: flex;
  flex-direction: column;
}

/* -webkit-filter:blur(20px);模糊图片 
filter(滤镜) :高斯模糊*/

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20rpx);
  filter: blur(20rpx);
}

/* ---------<!--头部  --> ---------------*/

/* absolute：绝对定位的元素的位置相对于最近的已定位父元素,没有就是page */

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute; /*因为是浮动在模糊图片之上的*/
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.main-title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}

/* ---------------- <!--电影海报  -->------------  */

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

/*----------------  <!--电影文字简介  -->-----------  */

.summary {
  margin-top: 40rpx;
  margin-left: 40rpx;
  color: #777;
}

.original-title {
  color: #f21146;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

/* white-space:nowrap文本不进行换行 */

.mark {
  color: #999;
  margin-right: 30rpx;
  white-space: nowrap;
}

/*---------------  <!--水平横线  -->-----------  */

.hr {
  margin-top: 45rpx;
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}

/*-------- <!--剧情简介  -->------ */

.synopsis {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.synopsis-font {
  color: #999;
}

.summary-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}

/*--------- <!--演员简介 水平滚动  -->---- */

.cast {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.cast-font {
  color: #999;
  margin-bottom: 40rpx;
}

/* white-space: nowrap-段落中的文本不进行换行 */

.cast-imgs {
  white-space: nowrap;
}

/* display: inline-flex-行内块元素 ;white-space: normal-默认换行。空白会被忽略*/

.cast-container {
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
}
