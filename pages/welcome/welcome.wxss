/* pages/welcome/welcome.wxss */

page {
  height: 100%;
  background: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  margin-top: 160rpx;
}

.user-name {
  margin-top: 150rpx;
  font-size: 32rpx;
  /* font-family: Microsoft YaHei; 统一写到全局CSS中去了*/
  font-weight: bold;
}

.moto-container {
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center; /*水平居中*/
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx; /*垂直居中*/
  color: #405f80;
}
